{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Multi-Language Template",
  "scopeName": "source.multi-language-template",
  "patterns": [
    {
      "include": "#frontmatter"
    },
    {
      "include": "#typescript-with-handlebars"
    }
  ],
  "repository": {
    "frontmatter": {
      "name": "meta.frontmatter.yaml.template",
      "begin": "^(-{3})\\s*$",
      "end": "^(-{3})\\s*$",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.frontmatter.begin" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.frontmatter.end" }
      },
      "patterns": [
        {
          "include": "#handlebars-tag"
        },
        {
          "include": "source.yaml"
        }
      ]
    },
    "typescript-with-handlebars": {
      "patterns": [
        {
          "include": "#handlebars-comment"
        },
        {
          "include": "#handlebars-tag"
        },
        {
          "include": "source.ts"
        }
      ]
    },
    "handlebars-comment": {
      "name": "comment.block.handlebars",
      "begin": "(\\{\\{!--)",
      "end": "(--\\}\\})",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.comment.begin.handlebars" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.comment.end.handlebars" }
      }
    },
    "handlebars-tag": {
      "name": "meta.embedded.block.handlebars",
      "begin": "(\\{\\{)",
      "end": "(\\}\\})",
      "beginCaptures": {
        "1": { "name": "punctuation.section.embedded.begin.handlebars" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.section.embedded.end.handlebars" }
      },
      "patterns": [
        {
          "name": "keyword.control.handlebars",
          "match": "\\#(if|unless|each|with|lookup|log)\\b"
        },
        {
          "name": "keyword.control.handlebars",
          "match": "/"
        },
        {
          "name": "keyword.operator.handlebars",
          "match": "\\.\\.?|this"
        },
        {
          "name": "entity.name.tag.handlebars",
          "match": "[a-zA-Z_][a-zA-Z0-9_\\.-]*"
        }
      ]
    }
  }
}
