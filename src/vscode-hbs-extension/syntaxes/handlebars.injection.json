{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Handlebars Injection",
  "scopeName": "source.handlebars.injection",
  "injectionSelector": "L:source.multi-language-template, L:source.ts, L:source.yaml",
  "patterns": [
    {
      "include": "#handlebars-comment"
    },
    {
      "include": "#handlebars-tag"
    }
  ],
  "repository": {
    "handlebars-comment": {
      "name": "comment.block.handlebars",
      "begin": "\\{\\{!--",
      "end": "--\\}\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.comment.begin.handlebars" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.comment.end.handlebars" }
      }
    },
    "handlebars-tag": {
      "name": "meta.embedded.block.handlebars",
      "begin": "\\{\\{",
      "end": "\\}\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.section.embedded.begin.handlebars" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.section.embedded.end.handlebars" }
      },
      "patterns": [
        {
          "name": "keyword.control.handlebars",
          "match": "[#/](if|unless|each|with|lookup|log|else)\\b"
        },
        {
          "name": "keyword.operator.handlebars",
          "match": "\\.\\.?|this\\b"
        },
        {
          "name": "entity.name.tag.handlebars variable.other.handlebars",
          "match": "[a-zA-Z_][a-zA-Z0-9_\\.-]*"
        }
      ]
    }
  }
}
