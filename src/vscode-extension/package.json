{
  "name": "codefactory",
  "displayName": "CodeFactory",
  "description": "Extraction-based code generation with smart sync. Includes syntax highlighting for template files with YAML/JSON frontmatter and Handlebars templating.",
  "version": "0.1.0",
  "publisher": "codefactory",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/.codefactory.json"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "codefactory.sync",
        "title": "CodeFactory: Sync"
      }
    ],
    "keybindings": [
      {
        "command": "codefactory.sync",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      }
    ],
    "languages": [
      {
        "id": "multi-language-template",
        "aliases": ["Multi-Language Template", "Template"],
        "extensions": [".hbs", ".handlebars", ".template"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "multi-language-template",
        "scopeName": "source.multi-language-template",
        "path": "./syntaxes/multi-language-template.tmLanguage.json"
      },
      {
        "scopeName": "source.handlebars.injection",
        "path": "./syntaxes/handlebars.injection.json",
        "injectTo": [
          "source.multi-language-template",
          "source.ts",
          "source.yaml"
        ]
      }
    ]
  }
}
