{
  "name": "@codefactory/core",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "imports": {
    "handlebars": "npm:handlebars@^4.7.8",
    "@std/yaml": "jsr:@std/yaml@^1",
    "@std/assert": "jsr:@std/assert@^1",
    "@std/path": "jsr:@std/path@^1"
  },
  "tasks": {
    "dev": "deno run --watch mod.ts",
    "check": "deno check mod.ts",
    "test": "deno test --allow-read --allow-write"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
