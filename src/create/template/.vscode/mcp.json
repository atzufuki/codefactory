{
  "servers": {
    "codefactory": {
      "type": "stdio",
      "command": "deno",
      "args": [
        "run",
        "--allow-read",
        "--allow-write",
        "--allow-env",
        "${workspaceFolder}/../../mcp-server/server.ts"
      ],
      "env": {
        "CODEFACTORY_MANIFEST": "${workspaceFolder}/codefactory.manifest.json",
        "CODEFACTORY_FACTORIES_DIR": "${workspaceFolder}/factories"
      }
    }
  }
}